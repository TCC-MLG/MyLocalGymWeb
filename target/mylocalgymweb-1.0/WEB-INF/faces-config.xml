<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
   
    <navigation-rule>
        <from-view-id>/site/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>criar_conta</from-outcome>
            <to-view-id>/site/cadastro.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>principal</from-outcome>
            <to-view-id>/sistema/checkIn.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/site/cadastro.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/site/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/sistema/checkIn.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>go_faturamento</from-outcome>
            <to-view-id>/sistema/faturamento/faturamento.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/sistema/checkIn.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>go_historico</from-outcome>
            <to-view-id>/sistema/historico/historico.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/sistema/checkIn.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>go_perfil</from-outcome>
            <to-view-id>/sistema/perfil/perfil.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/sistema/faturamento/faturamento.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>go_historico</from-outcome>
            <to-view-id>/sistema/historico/historico.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>principal</from-outcome>
            <to-view-id>/sistema/checkIn.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>go_perfil</from-outcome>
            <to-view-id>/sistema/perfil/perfil.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
